@model ProjectTweet.Models.HomePageModel

@{
  ViewData["Title"] = "Home Page";
}

<div class="container  pt-3">
  <div class="row">

    <div class="col-8">

      <div class="text-center">

        <div class="row">

          @foreach (var tweet in @Model.ListOfTweets)
          {
            <partial name="_MainTweetPartial" model="@tweet" />
          }

        </div>
      </div>

    </div>

    <div class="col-4" style="background-color: rgb(229, 231, 237); border-radius: 20px; padding: 15px;">
      <h3 style="color: rgb(79, 119, 146);">Top Trending Tweets</h3>

      @foreach (var tweet in @Model.TopTweets)
      {
        <partial name="_TopTweetPartial" model="@tweet" />
      }

    </div>
  </div>

</div>
</div>
</div>
