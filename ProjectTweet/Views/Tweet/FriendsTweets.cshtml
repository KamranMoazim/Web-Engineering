@{
    ViewData["Title"] = "FriendsTweets";
}

<div class="container pt-3">

    <h2 class="text-center">My Friends Tweets</h2>

    <div class="row text-center">



        <div class="col-3 p-2">
            <h4>FirstName LastName</h4>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        <a asp-controller="Tweet" asp-action="SingleTweet">
                            Tweet title
                        </a>
                    </h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the
                        card's content.</p>
                    <a href="#" class="btn btn-outline-danger m-1">#Tag1</a>
                    <a href="#" class="btn btn-outline-primary m-1">#Tag2 lfjs dklf</a>
                    <a href="#" class="btn btn-outline-dark m-1">#Tag3</a>
                </div>
                <button class="btn btn-outline-primary m-1"> <i class="fa fa-thumbs-up"></i> Like Tweet</button>
                <button class="btn btn-outline-primary m-1"> <i class="fa fa-comment" aria-hidden="true"></i>
                    Comment</button>
            </div>
        </div>


    </div>

</div>
</div>