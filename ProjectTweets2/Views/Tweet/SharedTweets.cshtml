@{
    ViewData["Title"] = "SharedTweets";
}


<div class="container pt-3">

    <h2 class="text-center">Friends Shared Tweets</h2>

    <div class="row text-center">



        <div class="col-3 p-2">
            <div class="card" style="padding: 10px;">
                <h4>FirstName Shared</h4>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a asp-controller="Tweet" asp-action="SingleTweet">
                                Tweet title
                            </a>
                        </h5>
                        <p class="card-text">
                            Some quick example text to build on the card title and make up the bulk of
                            the card's content.
                        </p>
                    </div>
                </div>
            </div>

        </div>


    </div>

</div>
</div>