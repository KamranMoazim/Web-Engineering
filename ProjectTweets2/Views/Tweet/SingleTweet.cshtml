@model ProjectTweets2.Models.DB.Tweets

@{
    ViewData["Title"] = "SingleTweet";
}

<style>
    .text-center {
        text-align: center;
    }

    .font-medium {
        font-size: medium;
    }

    .font-large {
        font-size: 1.4rem;
    }

    .mt-5 {
        margin-top: 2rem;
    }

    .badge {
        display: inline-block;
        padding: 0.25rem 0.5rem;
        font-size: 0.8rem;
        font-weight: 400;
        line-height: 1;
        text-align: center;
        white-space: nowrap;
        vertical-align: baseline;
        border-radius: 0.25rem;
    }

    .bg-primary {
        background-color: #007bff;
        color: #fff;
    }

    .mt-3 {
        margin-top: 1.5rem;
    }

    .form-control {
        display: block;
        width: 100%;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        line-height: 1.5;
        color: #495057;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

    .btn-primary {
        color: #fff;
        background-color: #007bff;
        border-color: #007bff;
    }

    .form-label {
        font-size: 1rem;
        font-weight: 400;
    }

    .mt-2 {
        margin-top: 0.5rem;
    }
</style>


<div class="container pt-3">

    <h2 class="text-center"> @Model.Title </h2>
    <div class="container">
        <img src="~/Images/@Model.ImageName" alt="Uploaded Image" />

        <div class="card">
            <div class="card-body">
                <a class="btn btn-outline-danger m-1" asp-controller="Tweet" asp-action="TagTweets"
                    asp-route-id=@Model.Tags.Tag1>
                    #@Model.Tags.Tag1
                </a>

                <a class="btn btn-outline-primary m-1" asp-controller="Tweet" asp-action="TagTweets"
                    asp-route-id=@Model.Tags.Tag2>
                    #@Model.Tags.Tag2
                </a>

                <a class="btn btn-outline-dark m-1" asp-controller="Tweet" asp-action="TagTweets"
                    asp-route-id=@Model.Tags.Tag3>
                    #@Model.Tags.Tag3
                </a>
                <p style="font-size: medium;">By
                    <a asp-controller="Auth" asp-action="OtherUserDetail"
                        asp-route-id="@Model.UserId">@Model.User.Username

                    </a>
                    | @Model.PostedAt.ToString()
                </p>

                <p class="card-text" style="font-size: 1.4rem;"> @Model.Content </p>
                <br />

                <form class="form-inline" action="@Model.TweetId/LikeTweet" method="post">
                    <input class="btn btn-primary form-label" type="submit" value="Like it!" />
                </form>

                <form class="form-inline" action="@Model.TweetId/ShareTweet" method="post">
                    <input class="btn btn-primary form-label" type="submit" value="Share it!" />
                </form>
            </div>

        </div>


        <div style="margin-top: 20%;">
            <h5 class="text-center">Tweet Replies...!! </h4>
                <div class="mb-3 row">
                    @foreach (var item in Model.Comments)
                    {
                        <p>@item.Comment <span class="badge bg-primary">@item.User.Username</span></p>
                    }
                </div>
        </div>

        <form action="@Model.TweetId/CommentTweet" method="post">
            <div class="mt-3">
                <textarea class="form-control" placeholder="Enter Your Reply here" rows="3" name="comment"></textarea>
                <input class="btn btn-primary form-label mt-2" type="submit" value="Post" />
            </div>
        </form>

    </div>

</div>