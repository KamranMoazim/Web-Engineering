@model List<ProjectTweets2.Models.DB.Tweets>

@{
    ViewData["Title"] = "MySharedTweets";
}

<div class="container pt-3">

    <h2 class="text-center">All My Shared Tweets</h2>

    <div class="row text-center">

        <ul>
            @foreach (var tweet in @Model)
            {
                <div class="col-3 p-2">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a asp-controller="Tweet" asp-action="SingleTweet" asp-route-id="@tweet.TweetId">
                                    @tweet.Title
                                </a>
                            </h5>
                            <p class="card-text">@tweet.Content</p>
                        </div>
                        <form class="form-inline" action="MySharedTweets/@tweet.TweetId" method="post">
                            <input class="btn btn-outline-danger m-1" type="submit" value="Delete Sharing" />
                        </form>
                    </div>
                </div>
            }
        </ul>

    </div>

</div>