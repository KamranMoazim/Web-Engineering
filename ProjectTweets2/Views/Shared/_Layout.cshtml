@{
}

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - ProjectTweet</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  @* <link rel="stylesheet" href="~/ProjectTweet.styles.css" asp-append-version="true" /> *@
</head>

<body>
  <header>
    <div class="container">

      <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">

          <nav class="navbar bg-body-tertiary">
            <div class="container">
              <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <img src="~/images/logo.png" alt="Bootstrap" width="30" height="24" />
                Tweeter
              </a>
            </div>
          </nav>

          <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse">



            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              @* <li class="nav-item">
              <a class="nav-link active" asp-controller="Home" asp-action="Index">All Tweets</a>
              </li> *@

              @if (true)
              {
                <li class="nav-item">
                  <a class="nav-link active" asp-controller="Tweet" asp-action="MyTweets">My Tweets</a>
                </li>

                <li class="nav-item">
                  <a class="nav-link active" asp-controller="Tweet" asp-action="FriendsTweets">Friends Tweets</a>
                </li>

                <li class="nav-item">
                  <a class="nav-link active" asp-controller="Tweet" asp-action="SharedTweets">Friends Sharings</a>
                </li>

                <li class="nav-item">
                  <a class="nav-link active" asp-controller="Auth" asp-action="FollowOthers">Follow Others</a>
                </li>

                <li class="nav-item">
                  <a class="nav-link active" asp-controller="Messages" asp-action="MyMessages">Messages</a>
                </li>
              }

            </ul>

            @if (true)
            {
              <button class="btn m-2">
                <a asp-controller="Auth" asp-action="MyProfile" style="text-decoration: none;">
                  My Profile
                </a>
              </button>
              <button class="btn m-2">
                <a asp-controller="Tweet" asp-action="CreateTweet" style="text-decoration: none;">
                  Post Tweet
                </a>
              </button>
              <button class="btn m-2">
                <a asp-controller="Auth" asp-action="Logout" style="text-decoration: none;">
                  Logout
                </a>
              </button>
            }

            @if (true)
            {
              <button class="btn m-2">
                <a asp-controller="Auth" asp-action="Login" style="text-decoration: none;">
                  Login
                </a>
              </button>
              <button class="btn m-2">
                <a asp-controller="Auth" asp-action="Register" style="text-decoration: none;">
                  Register
                </a>
              </button>
            }

          </div>


        </div>
      </nav>

    </div>

  </header>
  <div class="container">
    <main role="main" class="pb-3">
      @RenderBody()
    </main>
  </div>

  <footer class="border-top footer text-muted">
    <div class="container">
      &copy; 2023 - ProjectTweet - Privacy
    </div>
  </footer>
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
