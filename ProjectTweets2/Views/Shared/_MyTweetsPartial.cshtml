@model ProjectTweets2.Models.DB.Tweets;
@{
    ViewData["Title"] = "_MyTweetsPartial";
}

<div class="col-3 p-2">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">
                <a asp-controller="Tweet" asp-action="SingleTweet" asp-route-id="@Model.TweetId">
                    @Model.Title
                </a>
            </h5>
            <p class="card-text">@Model.Content</p>
            @(await Component.InvokeAsync("TagsComponent", new { tags = Model.Tags }))
        </div>
        <form class="form-inline" action="MyTweets/@Model.TweetId" method="post">
            <input class="btn btn-outline-danger m-1" type="submit" value="Delete Tweet" />
        </form>
        @* <button class="btn btn-outline-danger m-1"><i class="fa fa-trash" aria-hidden="true"></i> Delete
        Tweet</button> *@
    </div>
</div>